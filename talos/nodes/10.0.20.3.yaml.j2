machine:
  type: controlplane
  network:
    hostname: ontos
    interfaces:
      - interface: bond0
        addresses: ["10.0.20.3/24"]
        routes: [{ network: 0.0.0.0/0, gateway: 10.0.20.1 }]
        bond:
          interfaces: []
          deviceSelectors:
            - hardwareAddr: 58:47:ca:7f:03:3d
              driver: i40e
          mode: active-backup
        vlans:
          - addresses:
              - 10.0.40.3/24
            routes: []
            dhcp: false
            vlanId: 40
            mtu: 1500
          - addresses:
              - 192.168.0.3/24
            routes: []
            dhcp: false
            vlanId: 99
            mtu: 1500
        mtu: 9000
        dhcp: false
        vip:
          ip: 10.0.20.250
      - # 2.5G ignore for WoL/vPro
        deviceSelector:
          hardwareAddr: 58:47:ca:7f:03:3f
          driver: igc
        ignore: true
  install:
    diskSelector:
      serial: "S435NA0N502095"
